package proxy;

/**
 *
 * @author NuevoUsuario
 */
import javax.swing.*;
public class ejercicioG extends JFrame {
    
    public ejercicioG() {
    
     setTitle("Ejercicio G");
        setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);

        JLabel numero = new JLabel("Ingrese un nÃºmero de 5 cifras: ");
        JTextField num = new JTextField (10);

        JTextArea resultado = new JTextArea(10,10);
        JButton boton = new JButton("Mostrar");
        
 
        boton.addActionListener(e-> {
            try{
              int N=Integer.parseInt(num.getText());

              int uno=(N/10000);
              int dos=(N/1000);
              int tres=(N/100);
              int four=(N/10);
              int five=(N);

              resultado.setText("Las cifras: "+uno+ " "+dos+" "+tres+ " "+four+ " "+five+" ");

            }catch (NumberFormatException ex){
                resultado.setText("Error.");
            }
        });
        JPanel panel = new JPanel();
        panel.setLayout(new BoxLayout(panel, BoxLayout.Y_AXIS));
        panel.add(numero);
        panel.add(num);
        panel.add(boton);
        panel.add(resultado);

        add(panel);
        pack();
        setLocationRelativeTo(null);
    }


    public static void main(String[] args) {
        SwingUtilities.invokeLater(() -> {
            ejercicioG ejercicio = new ejercicioG();
            ejercicio.setVisible(true);
        });
}
}
